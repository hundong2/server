<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MouseMacro.MainPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Label
            x:Name="StatusLabel"
            Text="Macro is stopped"
            FontSize="18"
            HorizontalOptions="Center" />

        <Button
            x:Name="MacroButton"
            Text="Start Macro"
            Clicked="OnMacroButtonClicked"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
